<div class="wrapper bg-yellow-400 w-2/6 h-96 mt-24 rounded-bl-3xl rounded-tr-3xl hover:bg-yellow-500 hover:text-white">
<div class="p-8 mt-5 font-bold">
<h2 class="text-center mb-10 font-bold text-2xl">Sign Up</h2>
<div class=""><%= form_with(url: "/sign_up" ,method: :post,local: true) do |f| %> 
  <%# Put a text field %>
  <%= f.label :email %>
  <%= f.text_field :email, class: "overflow-hidden py-2 px-4 rounded-full border ring-0 focus:ring-4 focus:ring-yellow-100 focus:shadow-none focus:border-yellow-400 focus:outline-none w-96" %>
  <%= f.label :password %>
  <%= f.password_field :password, class: "overflow-hidden py-2 px-4 rounded-full border ring-0 focus:ring-4 focus:ring-yellow-100 focus:shadow-none focus:border-yellow-400 focus:outline-none w-96" %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "overflow-hidden py-2 px-4 rounded-full border ring-0 focus:ring-4 focus:ring-yellow-100 focus:shadow-none focus:border-yellow-400 focus:outline-none w-96" %>
  <%= f.submit "Create my account" %>
<% end %>
</div>
</div>
</div>
