<h2>Sign Up</h2>
<%= form_with(url: "/sign_up" ,method: :post,local: true) do |f| %> 
  <%# Put a text field %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Create my account" %>
<% end %>
